<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.waq8.neweasybill" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BillActivity"
            android:label="@string/title_activity_bill"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name="com.waq8.login.Login"
            android:label="@string/login">
        </activity>
        <activity android:name="com.waq8.login.Register"
            android:label="@string/register">
        </activity>
        <activity
            android:name=".CateActivity"
            android:label="@string/title_activity_cate" >
        </activity>
        <activity
            android:name=".SettActivity"
            android:label="@string/title_activity_sett" >
        </activity>
        <activity android:name=".AddBillActivity"
            android:label="@string/title_activity_add_bill">
        </activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission>
</manifest>
